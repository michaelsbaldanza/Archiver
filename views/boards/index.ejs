<%- include('../partials/header') %>

    <div><a href="/boards/new">Create New</a></div>
    <table>
        <thead>
            <tr>
                <th>Your boards</th>
            </tr>
            <tr>
                <th>Title</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% boards.forEach(function(b) { %>
            <tr>
                <td><%= b.name %></td>
                <td><%= b.description %></td>
                <td><a href="/boards/<%= b._id %>">Link</a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>

<%- include('../partials/footer') %>